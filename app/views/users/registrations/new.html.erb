<main>
  <div class="valign-wrapper">
    <div class="login valign">
    <h2>학생 회원가입</h2>
    <blockquote>
      <%= devise_error_messages! %>
    </blockquote>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "login-form"}) do |f| %>
      <div class="form-group">
        <%= f.label :email, "이메일" %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", require: true %>
      </div>
    
      <div class="form-group">
        <%= f.label :password, "패스워드" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "패스워드 재확인" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>
      
    
      <div class="form-group">
        <%= f.label :phone_number, "연락처" %><br />
        <%= f.text_field :phone, require: true ,class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :school, "학교" %><br />
        <select name="user[school]" class="form-control" id="user_school">
           <optgroup label="======학교를 선택해 주세요======">
              <option value="아주대학교" selected>아주대학교</option>
              <option value="경기대학교">경기대학교</option>
              <option value="성균관대학교">성균관대학교</option>
              <option value="수원대학교">수원대학교</option>
            </optgroup>
        </select>
      </div>
      
      <div class="actions">
        <%= f.submit "가입", class:"btn btn-primary btn-lg btn-block btn-embossed" %>
      </div>
    <% end %>
    
    <%= render "users/shared/links" %>
    </div>
  </div>
</main>