<main>
<div class="valign-wrapper">
  <div class="valign">
    <h2>Forgot your password?</h2>
    <blockquote>
        <%= devise_error_messages! %>
    </blockquote>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"login-form" }) do |f| %>
  
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-block btn-primary" %>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>

  </div>
</div>
</main>