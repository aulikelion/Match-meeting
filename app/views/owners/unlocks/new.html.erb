<div class="valign-wrapper">
  <div class="valign">
    <h2>Resend unlock instructions</h2>
    <blockquote>
      <%= devise_error_messages! %>
    </blockquote>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class:'login-form' }) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Resend unlock instructions", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  
  <%= render "owners/shared/links" %>
  </div>
</div>


