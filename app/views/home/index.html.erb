<main align="center" style="padding:0; margin:0 atuo;">
  <div id="player"></div>
  <!--<iframe width="100%" height="720" src="https://www.youtube-nocookie.com/embed/cI2QRiAIvG0?rel=0&autoplay=1&controls=0&showinfo=0" frameborder="0"></iframe>-->
</main>


<script src="//www.youtube.com/player_api"></script>

<script>
    
    // create youtube player
    var player;
    function onYouTubePlayerAPIReady() {
        player = new YT.Player('player', {
          height: '720',
          width: '100%',
          videoId: 'cI2QRiAIvG0',
          
          events: {
            'onReady': onPlayerReady,
            'onStateChange': onPlayerStateChange
          }
        });
    }

    // autoplay video
    function onPlayerReady(event) {
        event.target.playVideo();
    }

    // when video ends
    function onPlayerStateChange(event) {        
        if(event.data === 0) {            
            location.href="/intro";
        }
    }
    
</script>

